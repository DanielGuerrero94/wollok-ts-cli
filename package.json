{
  "name": "wollok-ts-cli",
  "version": "0.0.1",
  "description": "Wollok Command Line Interface",
  "repository": "https://github.com/uqbar-project/wollok-ts-cli",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/* && cp -r ./public ./dist && tsc",
    "watch": "npm run build -- -w",
    "start": "electron ./dist/index.js",
    "pack": "npm run build && pkg .",
    "pack:win": "npm run build && pkg -t win ."
  },
  "bin": {
    "wollok": "./dist/index.js"
  },
  "pkg": {
    "outputPath": "dist"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.2.0",
    "globby": "^11.0.4",
    "loglevel": "^1.8.0",
    "wollok-ts": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "electron": "^19.0.8",
    "eslint": "^8.3.0",
    "pkg": "^5.6.0",
    "ts-node": "10.4.0",
    "typescript": "4.5"
  }
}